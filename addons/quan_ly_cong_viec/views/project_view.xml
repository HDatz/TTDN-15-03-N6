<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_project_tree" model="ir.ui.view">
            <field name="name">project.tree</field>
            <field name="model">project.management</field>
            <field name="arch" type="xml">
                <tree string="Projects">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_project_form" model="ir.ui.view">
            <field name="name">project.form</field>
            <field name="model">project.management</field>
            <field name="arch" type="xml">
                <form string="Project Details">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="team_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.management</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
