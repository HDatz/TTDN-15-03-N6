<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_task_stage_tree" model="ir.ui.view">
            <field name="name">task.stage.tree</field>
            <field name="model">task.stage</field>
            <field name="arch" type="xml">
                <tree string="Task Stages">
                    <field name="name"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_task_stage_form" model="ir.ui.view">
            <field name="name">task.stage.form</field>
            <field name="model">task.stage</field>
            <field name="arch" type="xml">
                <form string="Task Stage Details">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_task_stage" model="ir.actions.act_window">
            <field name="name">Task Stages</field>
            <field name="res_model">task.stage</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
